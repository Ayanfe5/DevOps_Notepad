  "devDependencies": {
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.27.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
